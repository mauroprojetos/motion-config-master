- id: motion_detected_notify_${MOTION_CAMERA}
  alias: motion_detected_notify_${MOTION_CAMERA}
  initial_state: 'on'
  trigger:
    - platform: state
      entity_id: sensor.motion_detected_counter_${MOTION_CAMERA}
  condition:
